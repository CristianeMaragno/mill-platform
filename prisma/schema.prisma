// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User { //User data
  id              Int   @id @default(autoincrement())
  email           String   
  registration    DateTime @default(now())
}

model Module { //Learning modules
  id              Int   @id @default(autoincrement())
  phase           Int 
  name            String
  description     String
  icon            String
  active          Boolean
}

model UserModule { //User completed phases
   id              String   @id @default(cuid())
   phase           Int 
   user            String
}