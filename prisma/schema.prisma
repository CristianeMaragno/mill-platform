// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User { //User data
    id              Int   @id @default(autoincrement())
    email           String   
    registration    DateTime @default(now())
}

model Question { //Questions related to be done through the experience
    id              Int   @id @default(autoincrement())
    question        String
    phase           Int
}

model UserQuestion { //User answer
    id              Int   @id @default(autoincrement())
    user            String
    phase           Int
    answer          String
}

model Phase {
   id              Int   @id @default(autoincrement())
   phase           Int 
   name            String
   description     String
   active          Boolean
}

model UserPhase {
   id              String   @id @default(cuid())
   phase           Int 
   user            String
}

model Example {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
